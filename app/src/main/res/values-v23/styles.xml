<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
<!--        <item name="primaryButtonTheme">@style/Widget.Button.Primary</item>-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:actionBarStyle">@style/AppTheme.Base.ActionBar.Text</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
    </style>

    <style name="BlueTheme.Base" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:actionBarStyle">@style/MyMaterialTheme.Base.ActionBar.Text</item>
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorBlue</item>
        <!--<item name="buttonColor">@color/colorPrimaryDark</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="primaryColor">@color/colorPrimaryDark</item>
        <item name="baseColor">@color/colorPrimary</item>
        <item name="transparentColor">@color/colorTransparentBlue</item>
        <item name="darkColor">@color/colorBlue</item>-->
    </style>

    <style name="MyMaterialTheme.Base.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolBarStyle" parent="BlueTheme.Base">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <!--<style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">?attr/primaryColor</item>
    </style>-->

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="color_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
</resources>