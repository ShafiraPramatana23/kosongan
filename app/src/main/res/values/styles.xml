<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
<!--        <item name="primaryButtonTheme">@style/Widget.Button.Primary</item>-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:actionBarStyle">@style/AppTheme.Base.ActionBar.Text</item>
<!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
    </style>

    <style name="BlueTheme.Base" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:actionBarStyle">@style/MyMaterialTheme.Base.ActionBar.Text</item>
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorBlue</item>
        <!--<item name="buttonColor">@color/colorPrimaryDark</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="primaryColor">@color/colorPrimaryDark</item>
        <item name="baseColor">@color/colorPrimary</item>
        <item name="transparentColor">@color/colorTransparentBlue</item>
        <item name="darkColor">@color/colorBlue</item>-->
    </style>

    <style name="MyMaterialTheme.Base.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/colorPrimaryDark</item>
    </style>

    <!--<style name="Widget.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/buttonColor</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>-->

    <style name="AppTheme.Base.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="ToolBarStyleText" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="ContentImageBadgeText" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BottomDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="color_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="TextInputLayoutHintText">
        <item name="android:textColor">#8F92A1</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DMSansBoldExpandedCT" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="DMSansBoldCollapsedCT" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#E4E4E4</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="EditTextUnderlineTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#F2F2F2</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

</resources>
