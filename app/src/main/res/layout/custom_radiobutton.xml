<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_5sdp">

    <ImageButton
        android:id="@+id/radio_view"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="center"
        android:background="@drawable/image_state"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_6sdp"
        android:orientation="vertical">

        <com.fidilaundry.app.util.FontTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Sell"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_9sdp"
            app:fontName="@string/font_name_dmsans"
            app:textStyle="@integer/font_style_bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgprice"
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.fidilaundry.app.util.FontTextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:includeFontPadding="false"
                    android:text="8,356.90"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_7sdp"
                    app:fontName="@string/font_name_dmsans"
                    app:textStyle="@integer/font_style_semibold" />

                <com.fidilaundry.app.util.FontTextView
                    android:id="@+id/tvUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/price"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:includeFontPadding="false"
                    android:text="/ g"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/_7sdp"
                    app:fontName="@string/font_name_dmsans"
                    app:textStyle="@integer/font_style_semibold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
